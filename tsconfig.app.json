{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "assets/*"],
  "exclude": ["src/**/__tests__/*", "src/worker/**"],
  "compilerOptions": {
    "lib": ["ES2021", "DOM", "DOM.Iterable"],
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
